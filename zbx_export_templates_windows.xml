<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>7.4</version>
    <template_groups>
        <template_group>
            <uuid>0b381a46614340d49124dc405fa4f3d8</uuid>
            <name>Templates</name>
        </template_group>
    </template_groups>
    <templates>
        <template>
            <uuid>992fd1f2ed964ab9b7de0cf93e35b509</uuid>
            <template>Template App Windows Updates</template>
            <name>Template App Windows Updates</name>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <items>
                <item>
                    <uuid>437b0b68c8104bab94b2df617197e7e0</uuid>
                    <name>Reboot Required regarding Windows Updates</name>
                    <key>win.reboot</key>
                    <delay>900</delay>
                    <history>90d</history>
                    <timeout>30s</timeout>
                    <tags>
                        <tag>
                            <tag>Application</tag>
                            <value>WindowsUpdate</value>
                        </tag>
                    </tags>
                    <triggers>
                        <trigger>
                            <uuid>ec54f40182074899af41b330962b2d2f</uuid>
                            <expression>last(/Template App Windows Updates/win.reboot)&gt;0</expression>
                            <name>Reboot required on {HOST.NAME} regarding Windows updates</name>
                            <priority>WARNING</priority>
                            <manual_close>YES</manual_close>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <uuid>fc1ca8809890412b9558ca105a3a4101</uuid>
                    <name>All Available Updates</name>
                    <key>win.updates.all</key>
                    <delay>900</delay>
                    <history>90d</history>
                    <timeout>30s</timeout>
                    <tags>
                        <tag>
                            <tag>Application</tag>
                            <value>WindowsUpdate</value>
                        </tag>
                    </tags>
                </item>
                <item>
                    <uuid>05c10623ea0b49b2a4baa698778dea0d</uuid>
                    <name>Non-Critical System Updates</name>
                    <key>win.updates.nonsec</key>
                    <delay>900</delay>
                    <history>90d</history>
                    <timeout>30s</timeout>
                    <tags>
                        <tag>
                            <tag>Application</tag>
                            <value>WindowsUpdate</value>
                        </tag>
                    </tags>
                </item>
                <item>
                    <uuid>25897aade3234c58b4e624534867fbb0</uuid>
                    <name>Security Updates</name>
                    <key>win.updates.security</key>
                    <delay>900</delay>
                    <history>90d</history>
                    <timeout>30s</timeout>
                    <tags>
                        <tag>
                            <tag>Application</tag>
                            <value>WindowsUpdate</value>
                        </tag>
                    </tags>
                </item>
            </items>
        </template>
    </templates>
    <triggers>
        <trigger>
            <uuid>f0faf37a4b064eb19ae484be5fabd1b4</uuid>
            <expression>last(/Template App Windows Updates/win.updates.security)&gt;0 and last(/Template App Windows Updates/win.updates.nonsec)&gt;0</expression>
            <name>{ITEM.LASTVALUE1} security and {ITEM.LASTVALUE2} regular updates on {HOST.NAME}</name>
            <priority>WARNING</priority>
            <manual_close>YES</manual_close>
        </trigger>
        <trigger>
            <uuid>f6db54f72ae84597ade68138bef8440d</uuid>
            <expression>last(/Template App Windows Updates/win.updates.nonsec)&gt;0 and last(/Template App Windows Updates/win.updates.security)=0</expression>
            <name>{ITEM.LASTVALUE} regular system updates on {HOST.NAME}</name>
            <priority>INFO</priority>
            <manual_close>YES</manual_close>
        </trigger>
        <trigger>
            <uuid>eed9f8fa03c84d639b84bdc61de43daa</uuid>
            <expression>last(/Template App Windows Updates/win.updates.security)&gt;0 and last(/Template App Windows Updates/win.updates.nonsec)=0</expression>
            <name>{ITEM.LASTVALUE} security updates on {HOST.NAME}</name>
            <priority>WARNING</priority>
            <manual_close>YES</manual_close>
        </trigger>
    </triggers>
</zabbix_export>
